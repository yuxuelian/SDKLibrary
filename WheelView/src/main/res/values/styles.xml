<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  这个是加入的代码 -->
    <style name="window_anim_style">
        <item name="android:windowEnterAnimation">@anim/bottom_slide_enter</item>
        <item name="android:windowExitAnimation">@anim/bottom_slide_exit</item>
    </style>

    <style name="full_screen_dialog" parent="Theme.AppCompat.Dialog">
        <!-- 是否有边框 -->
        <item name="android:windowFrame">@null</item>
        <!--是否在悬浮Activity之上  -->
        <item name="android:windowIsFloating">true</item>
        <!--标题  -->
        <item name="android:windowNoTitle">true</item>
        <!--阴影  -->
        <item name="android:windowIsTranslucent">true</item><!--半透明-->
        <!-- 进入和退出的动画 -->
        <item name="android:windowAnimationStyle">@style/window_anim_style</item>
        <!-- 点外边可以消失  -->
        <item name="android:windowCloseOnTouchOutside">true</item>
        <!--必须重写  否则会有16dp的边界-->
        <item name="android:windowBackground">@color/white</item>
    </style>
</resources>